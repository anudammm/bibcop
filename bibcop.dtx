% \begin{macro}{\bibliography}
% Then, we re-define the |\bibliography| command:
%    \begin{macrocode}
\makeatletter
\let\bibcop@oldbibliography\bibliography
\renewcommand\bibliography[1]{%
  \iexec[quiet]{perl "bibcop.pl" '#1'}%
  \bibcop@oldbibliography{#1}%
}
\makeatother
