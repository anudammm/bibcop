% Then, we create a Perl script for |phiquation| processing using |VerbatimOut| environment from
% \href{https://ctan.org/pkg/fancyvrb}{fancyvrb}:
%    \begin{macrocode}
\begin{VerbatimOut}{bibcop.pl}
print '\endinput';
\end{VerbatimOut}
\message{bibcop: File with Perl script 'bibcop.pl' saved^^J}%
\makeatother
